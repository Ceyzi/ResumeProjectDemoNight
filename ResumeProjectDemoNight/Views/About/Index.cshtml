@model ResumeProjectDemoNight.Entities.About
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<style>
    :root {
        --bg-main: #0a0e27;
        --bg-dark: #151935;
        --bg-card: #1e2139;
        --bg-card-hover: #252946;
        --border-color: #2d3250;
        --text-primary: #ffffff;
        --text-secondary: #a0a6c1;
        --text-muted: #6b7199;
        --blue-start: #3b5bdb;
        --blue-end: #4c6ef5;
        --green-start: #099268;
        --green-end: #0ca678;
        --purple-start: #7950f2;
        --purple-end: #9775fa;
        --yellow-start: #e8590c;
        --yellow-end: #fd7e14;
    }

    body {
        background-color: var(--bg-main) !important;
        color: var(--text-primary);
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
        overflow-y: auto !important;
        overflow-x: hidden !important;
        height: auto !important;
        min-height: 100vh;
    }

    html {
        overflow-y: auto !important;
        scroll-behavior: smooth;
    }

    .dashboard-wrapper {
        padding: 2rem;
        max-width: 1800px;
        margin: 0 auto;
        min-height: 100vh;
        height: auto;
    }

    /* Header */
    .dashboard-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 2rem;
    }

    .welcome-section h1 {
        font-size: 2.25rem;
        font-weight: 700;
        margin: 0 0 0.5rem 0;
        color: var(--text-primary);
    }

    .welcome-section p {
        color: var(--text-secondary);
        font-size: 0.95rem;
        margin: 0;
    }

    .date-section {
        text-align: right;
    }

    .date-label {
        font-size: 0.7rem;
        color: var(--text-muted);
        font-weight: 600;
        letter-spacing: 1.2px;
        margin-bottom: 0.25rem;
    }

    .date-value {
        font-size: 1.1rem;
        font-weight: 700;
        color: var(--text-primary);
    }

    /* Stats Cards Grid */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    @@media (max-width: 1400px) {
        .stats-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @@media (max-width: 768px) {
        .stats-grid {
            grid-template-columns: 1fr;
        }
    }

    .stat-card {
        background: linear-gradient(135deg, var(--gradient-start) 0%, var(--gradient-end) 100%);
        border-radius: 20px;
        padding: 1.75rem;
        position: relative;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.08);
    }

        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
        }

        .stat-card.blue {
            --gradient-start: #2d3e7e;
            --gradient-end: #3d4e8e;
        }

        .stat-card.green {
            --gradient-start: #1a4d3a;
            --gradient-end: #2a5d4a;
        }

        .stat-card.purple {
            --gradient-start: #5a3d7e;
            --gradient-end: #6a4d8e;
        }

        .stat-card.yellow {
            --gradient-start: #7e5a2d;
            --gradient-end: #8e6a3d;
        }

    .stat-card-top {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 2rem;
    }

    .stat-icon-box {
        width: 56px;
        height: 56px;
        background: rgba(255, 255, 255, 0.15);
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.75rem;
        color: #ffffff;
        backdrop-filter: blur(10px);
    }

    .stat-badge {
        background: rgba(255, 255, 255, 0.2);
        padding: 0.4rem 0.9rem;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 700;
        color: #ffffff;
        backdrop-filter: blur(10px);
    }

    .stat-bottom {
        margin-top: auto;
    }

    .stat-number {
        font-size: 3rem;
        font-weight: 800;
        color: #ffffff;
        line-height: 1;
        margin-bottom: 0.5rem;
    }

    .stat-label {
        color: rgba(255, 255, 255, 0.85);
        font-size: 0.95rem;
        font-weight: 600;
    }

    /* Content Grid */
    .content-grid {
        display: grid;
        grid-template-columns: 1fr 420px;
        gap: 2rem;
    }

    @@media (max-width: 1200px) {
        .content-grid {
            grid-template-columns: 1fr;
        }
    }

    /* Panel Styles */
    .dashboard-panel {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: 20px;
        padding: 2rem;
        margin-bottom: 2rem;
    }

    .panel-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.75rem;
    }

    .panel-title {
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1.5px;
        color: var(--text-secondary);
        display: flex;
        align-items: center;
        gap: 0.65rem;
    }

        .panel-title i {
            font-size: 1rem;
        }

    .panel-link {
        color: #5c7cfa;
        text-decoration: none;
        font-size: 0.9rem;
        font-weight: 600;
        transition: color 0.2s;
    }

        .panel-link:hover {
            color: #748ffc;
        }

    /* Profile Section */
    .profile-content {
        display: flex;
        gap: 2rem;
        align-items: center;
    }

    .profile-avatar {
        width: 110px;
        height: 110px;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid var(--border-color);
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
        flex-shrink: 0;
    }

    .profile-details h3 {
        font-size: 1.75rem;
        font-weight: 700;
        margin: 0 0 0.75rem 0;
        color: var(--text-primary);
    }

    .profile-details p {
        color: var(--text-secondary);
        line-height: 1.7;
        margin: 0 0 1rem 0;
        font-size: 0.95rem;
    }

    .btn-edit {
        color: #5c7cfa;
        text-decoration: none;
        font-size: 0.9rem;
        font-weight: 700;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: color 0.2s;
    }

        .btn-edit:hover {
            color: #748ffc;
        }

    /* Messages */
    .message-list {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .message-row {
        background: var(--bg-dark);
        border-left: 3px solid transparent;
        border-radius: 14px;
        padding: 1.25rem;
        transition: all 0.2s ease;
        cursor: pointer;
    }

        .message-row:hover {
            border-left-color: #5c7cfa;
            background: var(--bg-card-hover);
            transform: translateX(4px);
        }

    .message-content {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .message-avatar {
        width: 44px;
        height: 44px;
        background: var(--bg-card);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 2px solid var(--border-color);
        flex-shrink: 0;
    }

        .message-avatar i {
            font-size: 1.2rem;
            color: var(--text-muted);
        }

    .message-info {
        flex: 1;
    }

    .message-header-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.35rem;
    }

    .message-sender {
        font-size: 0.95rem;
        font-weight: 700;
        color: var(--text-primary);
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .unread-dot {
        width: 6px;
        height: 6px;
        background: #5c7cfa;
        border-radius: 50%;
    }

    .message-date {
        font-size: 0.75rem;
        color: var(--text-muted);
        font-weight: 600;
    }

    .message-subject {
        font-size: 0.85rem;
        color: var(--text-secondary);
    }

    /* Quick Actions */
    .quick-actions {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .quick-action-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        background: var(--bg-dark);
        padding: 1rem 1.25rem;
        border-radius: 14px;
        text-decoration: none;
        color: var(--text-primary);
        font-size: 0.9rem;
        font-weight: 600;
        transition: all 0.2s ease;
        border: 1px solid transparent;
    }

        .quick-action-item:hover {
            background: var(--bg-card-hover);
            border-color: var(--border-color);
            transform: translateX(4px);
            color: #ffffff;
        }

    .quick-action-left {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .quick-action-icon {
        width: 40px;
        height: 40px;
        background: var(--bg-card);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.1rem;
        color: var(--text-secondary);
    }

    .quick-action-item:hover .quick-action-icon {
        background: linear-gradient(135deg, #5c7cfa 0%, #748ffc 100%);
        color: #ffffff;
    }

    .quick-action-arrow {
        color: var(--text-muted);
        font-size: 1.1rem;
    }

    /* System Stats */
    .system-stats {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .stat-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 0;
        border-bottom: 1px solid var(--border-color);
    }

        .stat-row:last-child {
            border-bottom: none;
            padding-bottom: 0;
        }

    .stat-row-left {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .stat-row-icon {
        width: 40px;
        height: 40px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.1rem;
    }

        .stat-row-icon.blue {
            background: linear-gradient(135deg, #3b5bdb 0%, #4c6ef5 100%);
            color: #ffffff;
        }

        .stat-row-icon.purple {
            background: linear-gradient(135deg, #7950f2 0%, #9775fa 100%);
            color: #ffffff;
        }

        .stat-row-icon.green {
            background: linear-gradient(135deg, #099268 0%, #0ca678 100%);
            color: #ffffff;
        }

    .stat-row-label {
        font-size: 0.9rem;
        color: var(--text-secondary);
        font-weight: 600;
    }

    .stat-row-value {
        font-size: 1.5rem;
        font-weight: 800;
        color: var(--text-primary);
    }
</style>

<div class="dashboard-wrapper">
    <!-- Header -->
    <div class="dashboard-header">
        <div class="welcome-section">
            <h1>Hoş Geldiniz, @Model.NameSurname </h1>
            <p>İşte portfolyonuzun genel durumu</p>
        </div>
        <div class="date-section">
            <div class="date-label">BUGÜN</div>
            <div class="date-value">@DateTime.Now.ToString("dd MMMM yyyy")<br>Pazartesi</div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="stats-grid">
        <div class="stat-card blue">
            <div class="stat-card-top">
                <div class="stat-icon-box">
                    <i class="bi bi-briefcase-fill"></i>
                </div>
                <span class="stat-badge">+@ViewBag.ProjectCount Aktif</span>
            </div>
            <div class="stat-bottom">
                <div class="stat-number">@ViewBag.ProjectCount</div>
                <div class="stat-label">Toplam Proje</div>
            </div>
        </div>

        <div class="stat-card green">
            <div class="stat-card-top">
                <div class="stat-icon-box">
                    <i class="bi bi-lightbulb-fill"></i>
                </div>
                <span class="stat-badge">Gelişmiş</span>
            </div>
            <div class="stat-bottom">
                <div class="stat-number">@ViewBag.SkillCount</div>
                <div class="stat-label">Toplam Yetenek</div>
            </div>
        </div>

        <div class="stat-card purple">
            <div class="stat-card-top">
                <div class="stat-icon-box">
                    <i class="bi bi-envelope-fill"></i>
                </div>
                <span class="stat-badge">@ViewBag.MessageCount Yeni</span>
            </div>
            <div class="stat-bottom">
                <div class="stat-number">@ViewBag.MessageCount</div>
                <div class="stat-label">Gelen Mesaj</div>
            </div>
        </div>

        <div class="stat-card yellow">
            <div class="stat-card-top">
                <div class="stat-icon-box">
                    <i class="bi bi-award-fill"></i>
                </div>
                <span class="stat-badge">6 Aktif</span>
            </div>
            <div class="stat-bottom">
                <div class="stat-number">@ViewBag.CertificateCount</div>
                <div class="stat-label">Sertifika</div>
            </div>
        </div>
    </div>

    <!-- Content Grid -->
    <div class="content-grid">
        <!-- Left Column -->
        <div class="left-column">
            <!-- Profile Section -->
            <div class="dashboard-panel">
                <div class="panel-header">
                    <h2 class="panel-title">
                        <i class="bi bi-person-circle"></i>
                        Hakkımda Özeti
                    </h2>
                </div>
                <div class="profile-content">
                    <img src="@Model.ImageUrl" alt="@Model.NameSurname" class="profile-avatar">
                    <div class="profile-details">
                        <h3>@Model.NameSurname</h3>
                        <p>@Model.Description</p>
                        <a href="/About/Edit/@Model.AboutId" class="btn-edit">
                            Düzenle <i class="bi bi-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Messages Section -->
            <div class="dashboard-panel">
                <div class="panel-header">
                    <h2 class="panel-title">
                        <i class="bi bi-chat-left-dots"></i>
                        Son Mesajlar
                    </h2>
                    <a href="/Message/Index" class="panel-link">Tümünü Gör</a>
                </div>
                <div class="message-list">
                    @foreach (var msg in ViewBag.LastMessages as List<ResumeProjectDemoNight.Entities.Message>)
                    {
                        <div class="message-row">
                            <div class="message-content">
                                <div class="message-avatar">
                                    <i class="bi bi-person-fill"></i>
                                </div>
                                <div class="message-info">
                                    <div class="message-header-row">
                                        <div class="message-sender">
                                            @msg.NameSurname
                                            <span class="unread-dot"></span>
                                        </div>
                                        <div class="message-date">@msg.SendDate.ToString("dd MMM, HH:mm")</div>
                                    </div>
                                    <div class="message-subject">@msg.Subject</div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Right Column -->
        <div class="right-column">
            <!-- Quick Actions -->
            <div class="dashboard-panel">
                <div class="panel-header">
                    <h2 class="panel-title">
                        <i class="bi bi-lightning-charge-fill"></i>
                        Hızlı İşlemler
                    </h2>
                </div>
                <div class="quick-actions">
                    <a href="/Portfolio/CreatePortfolio" class="quick-action-item">
                        <div class="quick-action-left">
                            <div class="quick-action-icon">
                                <i class="bi bi-plus-circle"></i>
                            </div>
                            <span>Yeni Proje Ekle</span>
                        </div>
                        <i class="bi bi-chevron-right quick-action-arrow"></i>
                    </a>
                    <a href="/Message/MessageList" class="quick-action-item">
                        <div class="quick-action-left">
                            <div class="quick-action-icon">
                                <i class="bi bi-inbox"></i>
                            </div>
                            <span>Mesajları Görüntüle</span>
                        </div>
                        <i class="bi bi-chevron-right quick-action-arrow"></i>
                    </a>
                    <a href="/Skill/AddSkill" class="quick-action-item">
                        <div class="quick-action-left">
                            <div class="quick-action-icon">
                                <i class="bi bi-gear"></i>
                            </div>
                            <span>Yeni Yetenek Ekle</span>
                        </div>
                        <i class="bi bi-chevron-right quick-action-arrow"></i>
                    </a>
                </div>
            </div>

            <!-- System Stats -->
            <div class="dashboard-panel">
                <div class="panel-header">
                    <h2 class="panel-title">
                        <i class="bi bi-graph-up"></i>
                        Sistem Durumu
                    </h2>
                </div>
                <div class="system-stats">
                    <div class="stat-row">
                        <div class="stat-row-left">
                            <div class="stat-row-icon blue">
                                <i class="bi bi-mortarboard-fill"></i>
                            </div>
                            <div class="stat-row-label">Eğitim Kayıtları</div>
                        </div>
                        <div class="stat-row-value">@ViewBag.EducationCount</div>
                    </div>
                    <div class="stat-row">
                        <div class="stat-row-left">
                            <div class="stat-row-icon purple">
                                <i class="bi bi-book-fill"></i>
                            </div>
                            <div class="stat-row-label">Deneyim Kayıtları</div>
                        </div>
                        <div class="stat-row-value">@ViewBag.ExperienceCount</div>
                    </div>
                    <div class="stat-row">
                        <div class="stat-row-left">
                            <div class="stat-row-icon green">
                                <i class="bi bi-tools"></i>
                            </div>
                            <div class="stat-row-label">Hizmetler</div>
                        </div>
                        <div class="stat-row-value">@ViewBag.ServiceCount</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>