@model ResumeProjectDemoNight.Entities.Certificate
@{
    ViewData["Title"] = "CreateCertificate";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-3xl mx-auto">
        <!-- Header -->
        <div class="mb-8">
            <a href="/Certificate/CertificateList/"
               class="inline-flex items-center gap-2 text-slate-400 hover:text-white mb-4 transition-colors">
                <span class="material-symbols-outlined">arrow_back</span>
                Listeye Dön
            </a>
            <h1 class="text-3xl font-bold text-white mb-2">Yeni Sertifika Ekle</h1>
            <p class="text-slate-400">Yeni bir sertifika kaydı oluşturun</p>
        </div>

        <!-- Form Card -->
        <div class="bg-slate-800/50 border border-slate-700/50 rounded-xl p-8">
            <form method="post">
                <div class="space-y-6">
                    <!-- Sertifika Adı -->
                    <div>
                        <label class="block text-sm font-semibold text-white mb-2">
                            Sertifika Adı
                            <span class="text-red-400">*</span>
                        </label>
                        <input type="text"
                               asp-for="CertificateName"
                               class="w-full bg-slate-900/50 border border-slate-700 rounded-lg px-4 py-3 text-white placeholder-slate-500 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-all"
                               placeholder="Örn: C# Eğitim Kampı"
                               required />
                    </div>

                    <!-- Sertifika URL -->
                    <div>
                        <label class="block text-sm font-semibold text-white mb-2">
                            Sertifika Resim Yolu
                            <span class="text-red-400">*</span>
                        </label>
                        <input type="text"
                               asp-for="CertificateUrl"
                               class="w-full bg-slate-900/50 border border-slate-700 rounded-lg px-4 py-3 text-white placeholder-slate-500 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500 transition-all"
                               placeholder="/certificates/sertifika-adi.jpg"
                               required />
                        <p class="mt-2 text-sm text-slate-500">
                            Dosyayı wwwroot/certificates klasörüne yükledikten sonra yolunu buraya girin
                        </p>
                    </div>

                    <!-- Info Box -->
                    <div class="bg-blue-500/10 border border-blue-500/30 rounded-lg p-4">
                        <div class="flex items-start gap-3">
                            <span class="material-symbols-outlined text-blue-400 mt-0.5">info</span>
                            <div class="text-sm text-slate-300">
                                <p class="font-semibold mb-1">Bilgilendirme</p>
                                <p>Yetenek seviyesini kaydırıcı ile ayarlayabilir veya hızlı seçim butonlarını kullanabilirsiniz.</p>
                            </div>
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div class="flex items-center gap-4 pt-6 border-t border-slate-700">
                        <button type="submit"
                                class="flex items-center gap-2 bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold transition-all">
                            <span class="material-symbols-outlined">save</span>
                            Yeteneği Kaydet
                        </button>
                        <a href="/Certificate/CertificateList/"
                           class="flex items-center gap-2 bg-slate-700 hover:bg-slate-600 text-white px-6 py-3 rounded-lg font-semibold transition-all">
                            <span class="material-symbols-outlined">close</span>
                            İptal
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>