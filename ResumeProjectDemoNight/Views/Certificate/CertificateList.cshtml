@model List<ResumeProjectDemoNight.Entities.Certificate>
@{
    ViewData["Title"] = "CertificateList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-7xl mx-auto">
        <!-- Header -->
        <div class="flex items-center justify-between mb-8">
            <div>
                <h1 class="text-3xl font-bold text-white mb-2">Sertifika Listesi</h1>
                <p class="text-slate-400">Sertifikalarınızla ilgili işlemleri bu sayfadan gerçekleştirebilirsiniz.</p>
            </div>
            <a href="/Certificate/CreateCertificate/"
               class="flex items-center gap-2 bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold transition-all">
                <span class="text-xl">+</span>
                Yeni Sertifika Ekle
            </a>
        </div>

        <!-- Certificates Grid -->
        <div class="grid gap-6">
            @foreach (var certificate in Model)
            {
                <div class="bg-slate-800/50 border border-slate-700/50 rounded-xl p-6 hover:border-slate-600 transition-all">
                    <div class="flex items-start gap-6">
                        <!-- Icon -->
                        <div class="flex-shrink-0">
                            <div class="w-16 h-16 bg-blue-600/20 rounded-xl flex items-center justify-center">
                                <span class="material-symbols-outlined text-blue-400 text-3xl">workspace_premium</span>
                            </div>
                        </div>

                        <!-- Content -->
                        <div class="flex-1 min-w-0">
                            <h3 class="text-xl font-bold text-white mb-2">@certificate.CertificateName</h3>

                            <div class="flex items-center gap-4 text-sm">
                                <div class="flex items-center gap-2 text-slate-400">
                                    <span class="material-symbols-outlined text-sm">image</span>
                                    <span class="truncate">@certificate.CertificateUrl</span>
                                </div>
                            </div>

                            <!-- Preview Image -->
                            @if (!string.IsNullOrEmpty(certificate.CertificateUrl))
                            {
                                <div class="mt-4">
                                    <img src="@certificate.CertificateUrl"
                                         alt="@certificate.CertificateName"
                                         class="w-full max-w-md rounded-lg border border-slate-700 hover:scale-105 transition-transform cursor-pointer"
                                         onclick="window.open('@certificate.CertificateUrl', '_blank')" />
                                </div>
                            }
                        </div>

                        <!-- Actions -->
                        <div class="flex items-center gap-2">
                            <a href="/Certificate/UpdateCertificate/@certificate.CertificateId"
                               class="p-2 text-blue-400 hover:bg-blue-400/10 rounded-lg transition-all"
                               title="Düzenle">
                                <span class="material-symbols-outlined">edit</span>
                            </a>
                            <a href="/Certificate/DeleteCertificate/@certificate.CertificateId"
                               class="p-2 text-red-400 hover:bg-red-400/10 rounded-lg transition-all"
                               onclick="return confirm('Bu sertifikayı silmek istediğinizden emin misiniz?')"
                               title="Sil">
                                <span class="material-symbols-outlined">delete</span>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (Model.Count == 0)
        {
            <div class="text-center py-16">
                <div class="inline-flex items-center justify-center w-20 h-20 bg-slate-800 rounded-full mb-4">
                    <span class="material-symbols-outlined text-slate-600 text-4xl">workspace_premium</span>
                </div>
                <h3 class="text-xl font-semibold text-white mb-2">Henüz sertifika eklenmemiş</h3>
                <p class="text-slate-400 mb-6">İlk sertifikanızı ekleyerek başlayın</p>
                <a href="/Certificate/CreateCertificate/"
                   class="inline-flex items-center gap-2 bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg font-semibold transition-all">
                    <span class="text-xl">+</span>
                    Sertifika Ekle
                </a>
            </div>
        }

        <!-- Footer Info -->
        <div class="mt-8 flex items-center justify-between text-sm text-slate-500">
            <span>Toplam @Model.Count sertifika listeleniyor</span>
            <div class="flex gap-2">
                <button class="px-4 py-2 bg-slate-800 hover:bg-slate-700 rounded-lg transition-all">Önceki</button>
                <button class="px-4 py-2 bg-slate-800 hover:bg-slate-700 rounded-lg transition-all">Sonraki</button>
            </div>
        </div>
    </div>
</div>