@model List<ResumeProjectDemoNight.Entities.SocialMedia>
@{
    ViewData["Title"] = "Sosyal Medya Yönetimi";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="social-media-container">
    <!-- Header Section -->
    <div class="page-header">
        <div class="header-content">
            <div class="header-icon">
                <i class="fas fa-share-alt"></i>
            </div>
            <div>
                <h2>Sosyal Medya Hesaplarım</h2>
                <p>Sosyal medya hesaplarınızı buradan yönetebilirsiniz</p>
            </div>
        </div>
        <a href="/SocialMedia/CreateSocialMedia" class="btn-add">
            <i class="fas fa-plus-circle"></i>
            <span>Yeni Hesap Ekle</span>
        </a>
    </div>

    <!-- Stats Cards -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <i class="fas fa-link"></i>
            </div>
            <div class="stat-info">
                <h3>@Model.Count</h3>
                <p>Toplam Hesap</p>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                <i class="fas fa-chart-line"></i>
            </div>
            <div class="stat-info">
                <h3>Aktif</h3>
                <p>Durumu</p>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                <i class="fas fa-globe"></i>
            </div>
            <div class="stat-info">
                <h3>Online</h3>
                <p>Bağlantı</p>
            </div>
        </div>
    </div>

    <!-- Social Media Cards Grid -->
    <div class="social-cards-grid">
        @foreach (var item in Model)
        {
            var gradientClass = GetGradientClass(item.PlatformName);
            var platformIcon = GetPlatformIcon(item.PlatformName);

            <div class="social-card">
                <div class="social-card-header @gradientClass">
                    <div class="platform-logo">
                        @if (!string.IsNullOrEmpty(item.Logo) && !item.Logo.Contains("placeholder"))
                        {
                            <img src="@item.Logo" alt="@item.PlatformName" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                            <i class="@platformIcon" style="display:none;"></i>
                        }
                        else
                        {
                            <i class="@platformIcon"></i>
                        }
                    </div>
                    <div class="card-actions">
                        <a href="/SocialMedia/UpdateSocialMedia/@item.Id" class="action-btn" title="Düzenle">
                            <i class="fas fa-edit"></i>
                        </a>
                        <button class="action-btn delete" onclick="confirmDelete(@item.Id)" title="Sil">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </div>
                </div>

                <div class="social-card-body">
                    <h3 class="platform-name">@item.PlatformName</h3>
                    <div class="url-container">
                        <i class="fas fa-link"></i>
                        <a href="@item.UrlAddress" target="_blank" class="platform-url" title="@item.UrlAddress">
                            @(item.UrlAddress.Length > 35 ? item.UrlAddress.Substring(0, 35) + "..." : item.UrlAddress)
                        </a>
                    </div>

                    <div class="card-footer">
                        <a href="@item.UrlAddress" target="_blank" class="btn-visit">
                            <i class="fas fa-external-link-alt"></i>
                            Ziyaret Et
                        </a>
                        <button class="btn-copy" onclick="copyToClipboard('@item.UrlAddress')" title="URL'yi Kopyala">
                            <i class="fas fa-copy"></i>
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="empty-state">
            <div class="empty-icon">
                <i class="fas fa-share-alt"></i>
            </div>
            <h3>Henüz sosyal medya hesabı eklenmemiş</h3>
            <p>Sosyal medya hesaplarınızı ekleyerek portföyünüzü zenginleştirin</p>
            <a href="/SocialMedia/CreateSocialMedia" class="btn-add-large">
                <i class="fas fa-plus-circle"></i>
                İlk Hesabınızı Ekleyin
            </a>
        </div>
    }
</div>

<!-- Delete Confirmation Modal -->
<div id="deleteModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <i class="fas fa-exclamation-triangle"></i>
            <h3>Hesabı Sil</h3>
        </div>
        <p>Bu sosyal medya hesabını silmek istediğinizden emin misiniz?</p>
        <div class="modal-actions">
            <button class="btn-cancel" onclick="closeModal()">İptal</button>
            <button class="btn-confirm" onclick="deleteSocial()">Sil</button>
        </div>
    </div>
</div>

@functions {
    string GetGradientClass(string platform)
    {
        if (string.IsNullOrEmpty(platform)) return "gradient-default";

        return platform.ToLower() switch
        {
            var p when p.Contains("facebook") => "gradient-facebook",
            var p when p.Contains("twitter") || p.Contains("x") => "gradient-twitter",
            var p when p.Contains("instagram") => "gradient-instagram",
            var p when p.Contains("linkedin") => "gradient-linkedin",
            var p when p.Contains("github") => "gradient-github",
            var p when p.Contains("youtube") => "gradient-youtube",
            var p when p.Contains("tiktok") => "gradient-tiktok",
            var p when p.Contains("pinterest") => "gradient-pinterest",
            var p when p.Contains("telegram") => "gradient-telegram",
            var p when p.Contains("whatsapp") => "gradient-whatsapp",
            var p when p.Contains("discord") => "gradient-discord",
            var p when p.Contains("snapchat") => "gradient-snapchat",
            _ => "gradient-default"
        };
    }

    string GetPlatformIcon(string platform)
    {
        if (string.IsNullOrEmpty(platform)) return "fas fa-share-alt";

        return platform.ToLower() switch
        {
            var p when p.Contains("facebook") => "fab fa-facebook-f",
            var p when p.Contains("twitter") => "fab fa-twitter",
            var p when p.Contains("x") => "fab fa-x-twitter",
            var p when p.Contains("instagram") => "fab fa-instagram",
            var p when p.Contains("linkedin") => "fab fa-linkedin-in",
            var p when p.Contains("github") => "fab fa-github",
            var p when p.Contains("youtube") => "fab fa-youtube",
            var p when p.Contains("tiktok") => "fab fa-tiktok",
            var p when p.Contains("pinterest") => "fab fa-pinterest",
            var p when p.Contains("telegram") => "fab fa-telegram",
            var p when p.Contains("whatsapp") => "fab fa-whatsapp",
            var p when p.Contains("discord") => "fab fa-discord",
            var p when p.Contains("snapchat") => "fab fa-snapchat",
            var p when p.Contains("reddit") => "fab fa-reddit",
            var p when p.Contains("medium") => "fab fa-medium",
            var p when p.Contains("behance") => "fab fa-behance",
            var p when p.Contains("dribbble") => "fab fa-dribbble",
            _ => "fas fa-share-alt"
        };
    }
}

