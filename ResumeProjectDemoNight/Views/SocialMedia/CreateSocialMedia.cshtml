@model ResumeProjectDemoNight.Entities.SocialMedia
@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-4xl mx-auto space-y-8">

        <!-- Header -->
        <div class="flex items-center justify-between">
            <div>
                <h3 class="text-2xl font-bold text-white">Yeni Sosyal Medya Ekle</h3>
                <p class="text-slate-400 text-sm mt-1">
                    Sosyal medya hesap bilgilerinizi ekleyin.
                </p>
            </div>
            <a href="/SocialMedia/Index/"
               class="flex items-center gap-2 bg-slate-700 hover:bg-slate-600 text-white px-5 py-2.5 rounded-lg font-bold text-sm transition-all">
                <span class="material-symbols-outlined" style="font-size:20px;">arrow_back</span>
                Geri Dön
            </a>
        </div>

        <!-- Form Card -->
        <div class="bg-card-dark rounded-xl border border-slate-800 overflow-hidden shadow-2xl">
            <div class="p-8">
                <form method="post" class="space-y-6">

                    <!-- Platform Name -->
                    <div class="space-y-2">
                        <label class="block text-sm font-semibold text-slate-300">
                            Platform Adı <span class="text-red-400">*</span>
                        </label>
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 -translate-y-1/2 material-symbols-outlined text-slate-500">
                                share
                            </span>
                            <input asp-for="PlatformName"
                                   class="w-full pl-12 pr-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-primary transition-all"
                                   placeholder="Örn: GitHub, LinkedIn" />
                        </div>
                    </div>

                    <!-- Url -->
                    <div class="space-y-2">
                        <label class="block text-sm font-semibold text-slate-300">
                            Profil Linki <span class="text-red-400">*</span>
                        </label>
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 -translate-y-1/2 material-symbols-outlined text-slate-500">
                                link
                            </span>
                            <input asp-for="UrlAddress"
                                   class="w-full pl-12 pr-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-primary transition-all"
                                   placeholder="https://github.com/..." />
                        </div>
                    </div>

                    <!-- Icon -->
                    <div class="space-y-2">
                        <label class="block text-sm font-semibold text-slate-300">
                            Icon (FontAwesome) <span class="text-red-400">*</span>
                        </label>
                        <div class="relative">
                            <span class="absolute left-4 top-1/2 -translate-y-1/2 material-symbols-outlined text-slate-500">
                                star
                            </span>
                            <input asp-for="Logo"
                                   class="w-full pl-12 pr-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg text-white placeholder-slate-500 focus:outline-none focus:ring-2 focus:ring-primary transition-all"
                                   placeholder="fab fa-github" />
                        </div>
                        <p class="text-xs text-slate-500">
                            Örn: <code>fab fa-linkedin</code>, <code>fab fa-github</code>
                        </p>
                    </div>

                    <!-- Actions -->
                    <div class="flex items-center gap-4 pt-6 border-t border-slate-800">
                        <button type="submit"
                                class="flex-1 flex items-center justify-center gap-2 bg-primary hover:bg-primary/90 text-white px-6 py-3 rounded-lg font-bold transition-all shadow-lg shadow-primary/20">
                            <span class="material-symbols-outlined" style="font-size:20px;">save</span>
                            Kaydet
                        </button>

                        <a href="/SocialMedia/Index/"
                           class="flex-1 flex items-center justify-center gap-2 bg-slate-700 hover:bg-slate-600 text-white px-6 py-3 rounded-lg font-bold transition-all">
                            <span class="material-symbols-outlined" style="font-size:20px;">close</span>
                            İptal Et
                        </a>
                    </div>

                </form>
            </div>
        </div>

        <!-- Info -->
        <div class="bg-blue-500/10 border border-blue-500/20 rounded-lg p-4">
            <div class="flex gap-3">
                <span class="material-symbols-outlined text-blue-400" style="font-size:24px;">info</span>
                <div class="flex-1">
                    <h4 class="text-sm font-semibold text-blue-400 mb-1">İpucu</h4>
                    <p class="text-xs text-slate-400">
                        Sosyal medya ikonları ana sayfada otomatik olarak listelenir.
                        Doğru ikon sınıfı kullandığınızdan emin olun.
                    </p>
                </div>
            </div>
        </div>

    </div>
</div>
