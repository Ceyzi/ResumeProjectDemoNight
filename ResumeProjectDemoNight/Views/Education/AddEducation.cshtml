@model ResumeProjectDemoNight.Entities.Education
@{
    ViewData["Title"] = "Eğitim Ekle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container p-4">
    <div class="card" style="background: #1c1c24; border: 1px solid #2d2d3a; color: white;">
        <div class="card-body p-4">
            <h4 class="fw-bold mb-4 text-primary">Yeni Eğitim Kaydı</h4>
            <form method="post">
                <div class="mb-3">
                    <label class="form-label text-muted">Bölüm / Başlık</label>
                    <input type="text" asp-for="Title" class="form-control bg-dark text-white border-secondary" placeholder="Örn: Yazılım Mühendisliği" required />
                </div>
                <div class="mb-3">
                    <label class="form-label text-muted">Üniversite / Kurum</label>
                    <input type="text" asp-for="Subtitle" class="form-control bg-dark text-white border-secondary" placeholder="Örn: Atılım Üniversitesi" required />
                </div>
                <div class="mb-3">
                    <label class="form-label text-muted">Tarih Aralığı</label>
                    <input type="text" asp-for="Date" class="form-control bg-dark text-white border-secondary" placeholder="Örn: 2021 - 2025" required />
                </div>
                <div class="mb-4">
                    <label class="form-label text-muted">Açıklama</label>
                    <textarea asp-for="Description" class="form-control bg-dark text-white border-secondary" rows="4"></textarea>
                </div>
                <button type="submit" class="btn btn-primary px-5">Kaydet</button>
                <a href="/Education/Index" class="btn btn-outline-secondary">İptal</a>
            </form>
        </div>
    </div>
</div>

