<!-- section about -->
@model ResumeProjectDemoNight.Entities.About
<section id="about">

    <div class="container">

        <!-- section title -->
        <h2 class="section-title wow fadeInUp">Hakkımda</h2>

        <div class="spacer" data-height="60"></div>

        <div class="row">

            <div class="col-md-3">
                <div class="text-center text-md-left">
                    <!-- avatar image -->
                    <img src="@Model.ImageUrl" alt="@Model.NameSurname" />
                </div>
                <div class="spacer d-md-none d-lg-none" data-height="30"></div>
            </div>

            <div class="col-md-9 triangle-left-md triangle-top-sm">
                <div class="rounded bg-white shadow-dark padding-30">
                    <div class="row">
                        <div class="col-md-6">
                            <!-- about text -->
                            <p>
                                Atılım Üniversitesi Yazılım Mühendisliği bölümünden mezunum.
                                Web geliştirme alanında çalışıyorum ve özellikle web sitesi tasarımı, geliştirilmesi ve özelleştirilmesi konularında tecrübeye sahibim.
                                Stok ve restoran yönetim sistemleri üzerine projelerde yer aldım; bu süreçte Flap Yazılım bünyesinde gerçek projeler üzerinde çalışma fırsatı buldum.
                                Şu anda Murat Yücedağ’dan yazılım alanında eğitimler almaya devam ederek kendimi sürekli geliştirmekteyim.
                                <br /><br />
                                İngilizceyi iyi seviyede kullanabiliyorum, Almanca bilgim ise temel seviyededir.
                                Boş zamanlarımda fitness yapmakla ilgileniyorum ve disiplinli bir yaşam tarzını benimsemeye özen gösteriyorum.
                            </p>
                            <div class="mt-3">
                                <a href="~/CV/Ceyda_Yasar_CV.pdf"
                                   class="btn btn-default"
                                   download>
                                    Download CV
                                </a>
                            </div>
                            <div class="spacer d-md-none d-lg-none" data-height="30"></div>
                        </div>
                        <div class="col-md-6">
                            <!-- skill item -->
                            <div class="skill-item">
                                <div class="skill-info clearfix">
                                    <h4 class="float-left mb-3 mt-0">Yabancı Dil Bilgisi</h4>
                                    <span class="float-right">85%</span>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar data-background" role="progressbar" aria-valuemin="0" aria-valuemax="100" aria-valuenow="85" data-color="#FFD15C">
                                    </div>
                                </div>
                                <div class="spacer" data-height="20"></div>
                            </div>

                            <!-- skill item -->
                            <div class="skill-item">
                                <div class="skill-info clearfix">
                                    <h4 class="float-left mb-3 mt-0">UI/UX design</h4>
                                    <span class="float-right">95%</span>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar data-background" role="progressbar" aria-valuemin="0" aria-valuemax="100" aria-valuenow="95" data-color="#FF4C60">
                                    </div>
                                </div>
                                <div class="spacer" data-height="20"></div>
                            </div>

                            <!-- skill item -->
                            <div class="skill-item">
                                <div class="skill-info clearfix">
                                    <h4 class="float-left mb-3 mt-0">Fitness</h4>
                                    <span class="float-right">70%</span>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar data-background" role="progressbar" aria-valuemin="0" aria-valuemax="100" aria-valuenow="70" data-color="#6C6CE5">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- row end -->

        <div class="spacer" data-height="70"></div>

        <div class="row">

            <div class="col-md-3 col-sm-6">
                <!-- fact item -->
                <div class="fact-item">
                    <span class="icon icon-fire"></span>
                    <div class="details">
                        <h3 class="mb-0 mt-0 number"><em class="count">10</em></h3>
                        <p class="mb-0">Tamamlanan Projeler</p>
                    </div>
                </div>
                <div class="spacer d-md-none d-lg-none" data-height="30"></div>
            </div>

          

            <div class="col-md-3 col-sm-6">
                <!-- fact item -->
                <div class="fact-item">
                    <span class="icon icon-people"></span>
                    <div class="details">
                        <h3 class="mb-0 mt-0 number"><em class="count">25</em></h3>
                        <p class="mb-0">Memnun Müşteri</p>
                    </div>
                </div>
                <div class="spacer d-md-none d-lg-none" data-height="30"></div>
            </div>

            <div class="col-md-3 col-sm-6">
                <!-- fact item -->
                <div class="fact-item">
                    <span class="icon icon-language"></span>
                    <div class="details">
                        <h3 class="mb-0 mt-0 number"><em class="count">7</em></h3>
                        <p class="mb-0">Bildiği Dil Sayısı</p>
                    </div>
                </div>
            </div>

        </div>

    </div>

</section>