@model List<ResumeProjectDemoNight.Entities.Skill>
@{
    ViewData["Title"] = "Yetenek Seviyeleri";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<style>
    :root {
        --bg-dark: #121218;
        --card-bg: #1c1c24;
        --accent: #ff9800; /* Daire dolum rengi */
    }

    /* Sayfa genelinde dikey kaydırmaya izin ver */
    body {
        background-color: var(--bg-dark) !important;
        overflow-y: auto !important;
    }

    /* Yetenek Kartı Tasarımı */
    .skill-card {
        background-color: var(--card-bg);
        border: 1px solid #2d2d3a;
        border-radius: 15px;
        padding: 25px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        transition: transform 0.3s ease, border-color 0.3s ease;
        height: 100%;
    }

        .skill-card:hover {
            border-color: var(--accent);
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.4);
        }

    /* Dairesel Progress Bar */
    .circle-wrap {
        position: relative;
        height: 100px;
        width: 100px;
        border-radius: 50%;
        display: grid;
        place-items: center;
        flex-shrink: 0;
    }

        .circle-wrap:before {
            content: "";
            position: absolute;
            height: 82%;
            width: 82%;
            background-color: var(--card-bg);
            border-radius: 50%;
        }

    .percent-number {
        position: relative;
        font-size: 1.4rem;
        font-weight: 800;
        color: white;
    }

    .skill-info h4 {
        color: white;
        font-weight: 700;
        margin-bottom: 5px;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    /* Yeni Yetenek Ekle Butonu */
    .add-skill-btn {
        background-color: var(--accent);
        color: #121218 !important;
        font-weight: 700;
        padding: 12px 30px;
        border-radius: 8px;
        text-decoration: none;
        display: inline-block;
        transition: 0.3s;
        border: none;
    }

        .add-skill-btn:hover {
            background-color: #e68a00;
            transform: scale(1.05);
        }
</style>

<div class="container-fluid p-4">

    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h2 class="fw-bold text-white mb-1">Yetenek Seviyeleri</h2>
            <p class="text-muted small">Aşağı kaydırarak tüm yeteneklerinizi görebilirsiniz</p>
        </div>
        <a href="/Skill/AddSkill" class="add-skill-btn shadow">
            <i class="bi bi-plus-circle-fill me-2"></i>Yeni Yetenek Ekle
        </a>
    </div>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-lg-6 col-md-12">
                <div class="skill-card">
                    <div class="skill-info">
                        <h4>@item.Title</h4>
                      
                    </div>

                    @* Dinamik Dairesel Progress *@
                    <div class="circle-wrap"
                         style="background: conic-gradient(var(--accent) @((item.Value * 3.6).ToString().Replace(",", "."))deg, #2d2d3a 0deg);">
                        <div class="percent-number">@item.Value%</div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">