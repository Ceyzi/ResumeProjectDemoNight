@model ResumeProjectDemoNight.Entities.Portfolio
@{
    ViewData["Title"] = "CreatePortfolio";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="flex-1 overflow-y-auto p-8">
    <div class="max-w-3xl mx-auto space-y-8">

        <!-- Header -->
        <div class="flex items-center justify-between">
            <div>
                <h3 class="text-2xl font-bold text-white">Yeni Proje Ekle</h3>
                <p class="text-slate-400 text-sm mt-1">
                    Portfolio projenizi eklemek için aşağıdaki alanları doldurun.
                </p>
            </div>
            <a href="/Portfolio/Index/"
               class="flex items-center gap-2 bg-slate-700 hover:bg-slate-600 text-white px-5 py-2.5 rounded-lg font-bold text-sm transition-all">
                <span class="material-symbols-outlined" style="font-size:20px;">arrow_back</span>
                Geri Dön
            </a>
        </div>

        <!-- Form Card -->
        <div class="bg-card-dark rounded-xl border border-slate-800 overflow-hidden shadow-2xl">
            <div class="p-8">
                <form method="post" class="space-y-6">

                    <!-- Project Title -->
                    <div class="space-y-2">
                        <label class="block text-sm font-semibold text-slate-300">
                            Proje Başlığı
                        </label>
                        <input asp-for="ProjectTitle"
                               class="w-full px-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg
                                      text-white placeholder-slate-500 focus:outline-none
                                      focus:ring-2 focus:ring-primary transition-all"
                               placeholder="Örn: E-Commerce Yönetim Platformu" />
                    </div>

                    <!-- Image URL -->
                    <div class="space-y-2">
                        <label class="block text-sm font-semibold text-slate-300">
                            Görsel URL
                        </label>
                        <input asp-for="ImageUrl"
                               class="w-full px-4 py-3 bg-slate-900/50 border border-slate-700 rounded-lg
                                      text-white placeholder-slate-500 focus:outline-none
                                      focus:ring-2 focus:ring-primary transition-all"
                               placeholder="https://..." />
                    </div>

                    <!-- STATUS (Gizli - default TRUE) -->
                    <input type="hidden" asp-for="Status" value="true" />

                    <!-- Buttons -->
                    <div class="flex items-center gap-4 pt-6 border-t border-slate-800">
                        <button type="submit"
                                class="flex-1 flex items-center justify-center gap-2
                                       bg-primary hover:bg-primary/90 text-white px-6 py-3
                                       rounded-lg font-bold transition-all shadow-lg shadow-primary/20">
                            <span class="material-symbols-outlined" style="font-size:20px;">save</span>
                            Projeyi Kaydet
                        </button>

                        <a href="/Portfolio/Index/"
                           class="flex-1 flex items-center justify-center gap-2
                                  bg-slate-700 hover:bg-slate-600 text-white px-6 py-3
                                  rounded-lg font-bold transition-all">
                            <span class="material-symbols-outlined" style="font-size:20px;">close</span>
                            İptal Et
                        </a>
                    </div>

                </form>
            </div>
        </div>

        <!-- Info -->
        <div class="bg-blue-500/10 border border-blue-500/20 rounded-lg p-4">
            <div class="flex gap-3">
                <span class="material-symbols-outlined text-blue-400">info</span>
                <p class="text-xs text-slate-400">
                    Projeye ait görsel URL’si eklerseniz portfolio sayfasında önizleme olarak gösterilir.
                </p>
            </div>
        </div>

    </div>
</div>
